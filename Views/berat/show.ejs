<%- include('../components/header.ejs') %>

<div class="card my-3">
	<div class="card-body">
		<ul class="list-group" style="width: 20%;">
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<span class="badge bg-secondary">Nama</span>
				<%= ideal.name %>
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<span class="badge bg-secondary">Tinggi</span>
				<%= ideal.height %> CM
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<span class="badge bg-secondary">Berat</span>
				<%= ideal.weight %> Kg
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				<span class="badge bg-secondary">Keterangan</span>
				<%= ideal.ket %>
			</li>
		</ul>
	</div>
	<div class="card-footer">
		<a href="/ideal/<%= ideal._id %>/edit" class="btn btn-warning text-white">Edit Data</a>
		<form action="/ideal/<%= ideal._id %>?_method=DELETE" method="POST" class="d-inline">
			<Button type="submit" class="btn btn-danger"
				onclick="return confirm('Yakin Menghapus Data Ini ? ')">Hapus</Button>
		</form>
	</div>
</div>

<%- include('../components/footer.ejs') %>