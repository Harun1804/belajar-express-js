<%- include('../components/header.ejs') %>

<div class="card my-3">
	<div class="card-body">
		<form action="/ideal" method="POST">
			<div class="mb-3">
				<label class="form-label">Nama Anda</label>
				<input type="text" class="form-control" name="name" placeholder="Masukan Nama Anda">
			</div>
			<div class="mb-3">
				<label class="form-label">Tinggi Anda</label>
				<input type="number" class="form-control" name="height" placeholder="Masukan Tinggi Anda">
			</div>
			<div class="mb-3">
				<label class="form-label">Berat Anda</label>
				<input type="number" class="form-control" name="weight" placeholder="Masukan Berat Anda">
			</div>
			<button type="submit" class="btn btn-primary">Hitung</button>
		</form>
	</div>
</div>

